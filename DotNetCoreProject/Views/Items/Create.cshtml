@model DotNetCoreProject.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h2>Create Item</h2>
<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-row">

                    <div class="col-lg-2">
                        <label asp-for="ProductCode" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="ProductCode" class="form-control" />
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="ItemName" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="ItemName" class="form-control" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="CategoryId" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">

                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option value="">--Select--</option>
                        </select>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="SubCategoryId" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">

                        <select asp-for="SubCategoryId" class="form-control" asp-items="ViewBag.SubCategoryId">
                            <option value="">--Select--</option>
                        </select>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="GroupName" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="GroupName" class="form-control" />
                        <span asp-validation-for="GroupName" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="CompanyName" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="CompanyName" class="form-control" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="ManufacturerCountry" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="ManufacturerCountry" class="form-control" />
                        <span asp-validation-for="ManufacturerCountry" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="PackSize" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="PackSize" class="form-control" />
                        <span asp-validation-for="PackSize" class="text-danger"></span>
                    </div>


                    <div class="col-lg-2">
                        <label asp-for="AlartQuantity" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="AlartQuantity" class="form-control" />
                        <span asp-validation-for="AlartQuantity" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="DiscountRate" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="DiscountRate" class="form-control" />
                        <span asp-validation-for="DiscountRate" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="Stock" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="PurchasePrice" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="PurchasePrice" class="form-control" />
                        <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="SalePrice" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="SalePrice" class="form-control" />
                        <span asp-validation-for="SalePrice" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="WholeSalePrice" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="WholeSalePrice" class="form-control" />
                        <span asp-validation-for="WholeSalePrice" class="text-danger"></span>
                    </div>

                    <div class="col-lg-2">
                        <label asp-for="CreatedDate" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="CreatedDate" class="form-control" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                        </label>
                    </div>

                </div>
         </div>
                              
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

