@model IEnumerable<DotNetCoreProject.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<partial name="_PertialView" />
<div class="col-md-5">
    <a asp-controller="Categories" asp-action="Create" class="btn btn-primary" style="width: 155px ">
        <i class="bi bi-plus-circle"></i> &nbsp;Add Category
    </a>
</div>
<br />
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategory.SubCategoryName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i>Edit</a> |
                @*<a asp-action="Details" class="btn btn-info"  asp-route-id="@item.CategoryId">Details</a> |*@
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoryId"><i class="bi bi-trash-fill"></i>Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
